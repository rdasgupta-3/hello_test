{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build C++ File",
        "type": "shell",
        "command": "/usr/bin/g++", // Ensure the correct path to g++
        "args": [
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "${file}",
          "-lm"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated by C++ extension"
      }
    ]
  }
  